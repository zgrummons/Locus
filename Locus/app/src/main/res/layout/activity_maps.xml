




    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.vetealinfierno.locus.MapsActivity">



        <Button
            android:id="@+id/qrCodeBtn"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cast_intro_overlay_button_background_color"
            android:onClick="switchToQRActivity"
            android:text="                                              Group ID   " />

        <Button
            android:id="@+id/mem2_btn"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_light"
            android:onClick="switchToMemActivity"
            android:text="                    Members   " />

        <Button
            android:id="@+id/home2_btn"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="switchToHomeActivity"
            android:text="  Home  " />

    </fragment>

